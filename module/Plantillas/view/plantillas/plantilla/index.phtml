    $("#plantilla_form").validate({
      rules: {
        unidad_negocio: {
          required: true
        },
        tipo_empleado: {
          required: true
        },
        nombre: {
          required: true,
          minlength: 5,
          remote: {
            url: "/plantilla/checkName",
            type: "POST",
            async: false,
            data: {
              id_plantilla: function () {
                return $("#id_plantilla").val();
              },
              nombre: function () {
                return $("#nombre").val();
              }
            }
          }
        },
